{
  "version": 3,
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++"
      }
    },
    {
      "name": "debug",
      "inherits": [ "base" ],
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "release",
      "inherits": [ "base" ],
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "x64",
      "hidden": true,
      "architecture": {
        "value": "x64",
        "strategy": "external"
      }
    },
    {
      "name": "x64-debug",
      "inherits": [ "debug", "x64" ]
    },
    {
      "name": "asan",
      "hidden": true,
      "cacheVariables": {
        "ENABLE_ASAN": "ON"
      }
    },
    {
      "name": "tsan",
      "hidden": true,
      "cacheVariables": {
        "ENABLE_TSAN": "ON"
      }
    },
    {
      "name": "ubsan",
      "hidden": true,
      "cacheVariables": {
        "ENABLE_UBSAN": "ON"
      }
    },
    {
      "name": "x64-debug-tsan",
      "inherits": [ "x64-debug", "tsan" ]
    }
  ],
  "buildPresets": [
    {
      "name": "x64-debug",
      "configurePreset": "debug"
    },
    {
      "name": "test-tsan",
      "configurePreset": "x64-debug-tsan"
    }
  ]
}